<odoo>
    <!-- Accident at Work -->
    <record id="hr_accident_at_work_view_tree" model="ir.ui.view">
        <field name="name">hr.accident.at.work.view.tree</field>
        <field name="model">hr.accident.at.work</field>
        <!--<field name="view_mode">tree,form,pivot,graph</field>-->
        <field name="arch" type="xml">
            <tree name="Accident At Work">
                <field name="employee_id"/>
                <field name="accident_location"/>
                <field name="accident_date"/>
                <field name="back_to_work_date"/>
            </tree>
        </field>
    </record>
    <record id="hr_accident_at_work_view_form" model="ir.ui.view">
        <field name="name">hr.accident_at_work.view.form</field>
        <field name="model">hr.accident.at.work</field>
        <field name="arch" type="xml">
            <form name="Accident at Work">
                <group>
                    <field name="employee_id"/>
                    <field name="accident_department"/>
                    <field name="accident_location"/>
                    <field name="accident_date"/>
                    <field name="accident_address"/>
                    <field name="accident_sequence"/>
                </group>
                <group name="Details">
                    <field name="number_of_employee_concerned"/>
                    <field name="number_of_employee_concerned_acknowledge_by_social_security"/>
                    <field name="social_security_authority_decision"/>
                    <field name="accident_during_commute"/>
                    <field name="accident_almost"/>
                    <field name="accident_circumstances"/>
                    <field name="wound_description"/>
                    <field name="online_wound_declaration_done"/>
                    <field name="work_stoppage"/>
                    <field name="work_stoppage_start_date" colspan="2"/>
                    <field name="work_stoppage_end_date" colspan="2"/>
                    <newline/>
                    <field name="work_stoppage_duration_days" colspan="2"/>
                    <field name="work_stoppage_duration_working_days" colspan="2"/>
                    <field name="back_to_work_date"/>
                    <field name="comment"/>
                    <field name="do_not_declare"/>
                </group>
            </form>
        </field>
    </record>
    <record id="accident_at_work_search" model="ir.ui.view">
        <field name="model">hr.accident.at.work</field>
        <field name="arch" type="xml">
            <search string="Accident at work">
                <field name="employee_id" string="Employee" domain="[()]"/>
                <field name="accident_location" string="City" domain="[()]"/>
            </search>
        </field>
    </record>
    <record id="action_hr_accident_at_work_tree" model="ir.actions.act_window">
        <field name="name">Accident at Work</field>
        <field name="res_model">hr.accident.at.work</field>
        <field name="view_type">form</field>
        <!--<field name="view_mode">tree,form,graph</field>-->
    </record>

    <menuitem id="menu_action_accident_at_work"
              action="action_hr_accident_at_work_tree"
              parent="hr.menu_hr_main"
              sequence="5"/>
</odoo>