<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_contract_discontinuous_view_form" model="ir.ui.view">
        <field name="name">hr.contract.discontinuous.view.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_end']" position="after">
                <label for="contract_duration" string="Contract Duration" />
                <div>
                    <field name="contract_duration" nolabel="1" />
                    <span class="ml8 mr8">day(s)</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
