<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_resource_calendar_inherit">
        <field name="name">view.resource.calendar.inherit</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="model">resource.calendar</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hours_per_day']" position="after">
                <field name="attendance_maximum_hours_per_day" widget="float_time"/>
            </xpath>
        </field>
    </record>

</odoo>
