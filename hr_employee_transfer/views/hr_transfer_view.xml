<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        
        <record id="department_transfer_tree_view" model="ir.ui.view">
            <field name="name">hr.department.transfer.tree</field>
            <field name="model">hr.department.transfer</field>
            <field name="arch" type="xml">
                <tree string="Job/Departmental Transfers" colors="blue:state == 'draft';black:state in ('confirm','pending');gray:state in('done','cancel')">
                    <field name="employee_id"/>
                    <field name="src_id"/>
                    <field name="dst_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="view_transfer_filter" model="ir.ui.view">
            <field name="name">Job/Departmental Transfers</field>
            <field name="model">hr.department.transfer</field>
            <field name="arch" type="xml">
                <search string="Job/Departmental Transfers">
                    <field name="employee_id"/>
                    <field name="src_id"/>
                    <field name="dst_id"/>
                    <field name="dst_department_id"/>
                    <filter icon="terp-camera_test" name="inprogress" domain="[('state','in',('draft', 'confirm', 'pending'))]" string="In Progress" />
                    <filter icon="terp-personal+"  domain="[('state','=','done')]" string="Done"/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="department_transfer_form_view" model="ir.ui.view">
            <field name="name">hr.department.transfer.form</field>
            <field name="model">hr.department.transfer</field>
            <field name="arch" type="xml">
                <form string="Departmental Transfer">
                <header>
                            <button name="signal_confirm" type="workflow" states="draft" string="Confirm" class="oe_highlight" groups="base.group_hr_manager"/>
                            <button name="signal_pending" type="workflow" states="confirm" string="Transfer" class="oe_highlight" groups="base.group_hr_manager"/>
                            <button name="signal_cancel" type="workflow" states="confirm,pending" string="Cancel" class="oe_highlight" groups="base.group_hr_manager"/>
                            <field name="state" widget="statusbar"/>
                        </header>
                    <sheet>
                    	<group>
                    	<field name="employee_id"/>
                    	<field name="date"/>
                    	</group>
                        
                        <group>
                            <group string="From">
                                
                                <field name="src_id"/>
                                <field name="src_department_id"/>
                                <field name="src_contract_id"/>
                            </group>
                            <group string="Destination">
                            	
                                <field name="dst_id"/>
                                <field name="dst_department_id"/>
                                <field name="dst_contract_id"/>
                                
                            </group>
                        </group>
                        <notebook><page string="Reason"><field name="note" nolabel="1"/></page></notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        
        <record id="open_hr_department_transfer" model="ir.actions.act_window">
            <field name="name">Employee Transfers</field>
            <field name="res_model">hr.department.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_inprogress":1}</field>
        </record>

            
        <menuitem id="menu_hr_department_transfer"
            action="open_hr_department_transfer"
            parent="hr.menu_hr_main"
            groups="base.group_hr_user"
            sequence="140"/>
        
    </data>
</openerp>
