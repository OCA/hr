<odoo>

    <record id="hr_talent_sourcing_wizard_form" model="ir.ui.view">
        <field name="name">hr.talent.sourcing.wizard.form</field>
        <field name="model">hr.talent.sourcing.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="provider_id" />
                <group name="query">
                    <field name="query" colspan="2" />
                    <field name="query_hints" colspan="2" />
                </group>
                <group name="options" />
                <footer>
                    <button name="action_submit_query" string="Submit Query" type="object" default_focus="1" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_talent_sourcing_wizard" model="ir.actions.act_window">
        <field name="name">Sourcing Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.talent.sourcing.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_hr_talent_sourcing_wizard"
        parent="menu_hr_talent_root"
        action="action_hr_talent_sourcing_wizard"
        sequence="1"
    />

</odoo>
