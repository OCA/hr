<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Wizard view -->
    <record id="print_run_slips_form" model="ir.ui.view">
      <field name="name">print.run.slips.form</field>
      <field name="model">print.run.slips</field>
      <field name="arch" type="xml">
        <form string="Print Payslips">
          <footer>
            <button name="print_slips" string="Print Payslips"
              type="object" class="oe_highlight" />
            or
            <button name="print_slips" string="Print Payslip Details"
              type="object" class="oe_highlight" context="{'print_details' : 1}" />
            or
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>
    <!-- Wizard action -->
    <record id="action_print_run_slips" model="ir.actions.act_window">
      <field name="name">Payslips</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">print.run.slips</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <!-- Action placement -->
    <record model="ir.values" id="payroll_run_slips_print">
      <field name="model_id" ref="hr_payroll.model_hr_payslip_run" />
      <field name="name">Print Payslips</field>
      <field name="key2">client_print_multi</field>
      <field name="value"
        eval="'ir.actions.act_window,' +str(ref('action_print_run_slips'))" />
      <field name="key">action</field>
      <field name="model">hr.payslip.run</field>
    </record>
  </data>
</openerp>