<openerp>
<data>

<record id="realize_interest_view_form" model="ir.ui.view">
    <field name="name">hr.loan.realize_interest form</field>
    <field name="model">hr.loan.realize_interest</field>
    <field name="arch" type="xml">
        <form string="Realize Interest">
            <group name="group_main" colspan="4" col="2">
                <field name="date_realization"/>
            </group>
            <footer>
                <button name="action_realize"
                        type="object"
                        string="Realize"
                        class="oe_highlight"/>
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="realize_interest_action" model="ir.actions.act_window">
    <field name="name">Realize Interest</field>
    <field name="res_model">hr.loan.realize_interest</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</data>
</openerp>
