    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.health</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="health" string="Health" groups="hr.group_hr_user">
                    <field name="health_condition_ids" />
                    <group name="medical_details" string='Medical Details'>
                        <field name="blood_type_id" />
                        <field name="health_notes" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
