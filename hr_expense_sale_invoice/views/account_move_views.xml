<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_expense_from_invoice" model="ir.actions.act_window">
        <field name="name">Expense</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('expense_invoice_id', '=', active_id)]</field>
    </record>

    <record
        id="account_move_view_form_inherit_hr_expense_sale_invoice"
        model="ir.ui.view"
    >
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="%(hr_expense_sale_invoice.action_expense_from_invoice)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-money"
                    attrs="{'invisible':['|',('move_type', '!=', 'out_invoice'),('expense_count','=', 0)]}"
                >
                    <field name="expense_count" widget="statinfo" string="Expenses" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
