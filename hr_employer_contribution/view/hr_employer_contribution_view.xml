<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        <record id="view_hr_employer_contribution_tree" model="ir.ui.view">
            <field name="name">hr.employer.contribution.tree</field>
            <field name="model">hr.employer.contribution</field>
            <field name="arch" type="xml">
                <tree colors="blue:state in ('confirm','hr_check','accont_check');black:state == 'new';gray:state == 'cancel'" string="Payslips">
                    <field name="number"/>
                    <field name="struct_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employer_contribution_form" model="ir.ui.view">
            <field name="name">hr.employer.contribution.form</field>
            <field name="model">hr.employer.contribution</field>
            <field name="arch" type="xml">
                <form string="contribution" version="7.0">
                <header>
                    <button string="Confirm" name="hr_verify_sheet" states="draft" class="oe_highlight"/>
                    <button string="Refund" name="refund_sheet" states="confirm,done" type='object' />
                    <button string="Set to Draft" name="draft" states="cancel"/>
                    <button string="Compute Sheet" name="compute_sheet" type="object" states="draft" class="oe_highlight"/>
                    <button string="Cancel Contribution" name="cancel_sheet" states="draft,hr_check,confirm,verify"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                        <label for="company_id" class="oe_edit_only"/>
                        <h2><field name="company_id" groups="base.group_multi_company" widget="selection"/></h2>
                        <label for="date_from" class="oe_edit_only" string="Period"/>
                        <h2>
                            From <field name="date_from"/> to <field name="date_to"/>
                        </h2>
                    </div>
                    <group col="4">
                        <field name="number"/>
                        <field name="struct_id" required="1" on_change="onchange_struct_id(struct_id)"/>
                        <field name="credit_note"/>
                    </group>
                    <notebook>
                        <page string="Contribution Lines" >
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Salary Structure" editable="bottom" colors="blue:total == 0">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="amount"/>
                                    <field name="total"/>
                                </tree>
                                <form string="Contribution Line">
                                    <group col="4">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="category_id"/>
                                        <field name="sequence"/>
                                        <field name="quantity"/>
                                        <field name="rate"/>
                                        <field name="amount"/>
                                        <field name="total"/>
                                        <field name="salary_rule_id"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Details By Salary Rule Category">
                            <field name="details_by_salary_rule" domain="[('appears_on_payslip', '=', True)]">
                                <tree string="Contribution Lines" colors="blue:total == 0">
                                    <field name="category_id"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                       </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employer_contribution_filter" model="ir.ui.view">
            <field name="name">hr.employer.contribution.select</field>
            <field name="model">hr.employer.contribution</field>
            <field name="arch" type="xml">
                <search string="Search Contributions">
                    <field name="name" string="contributions" filter_domain="['|',('name','ilike',self),('number','ilike',self)]"/>
                    <field name="struct_id"/>
                    <field name="date_from"/>
                </search>
            </field>
        </record>

        <record id="action_view_hr_employer_contribution_form" model="ir.actions.act_window">
            <field name="name">Employer Contributions</field>
            <field name="res_model">hr.employer.contribution</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_hr_employer_contribution_tree"/>
            <field name="search_view_id" ref="view_hr_employer_contribution_filter"/>
        </record>

        <menuitem action="action_view_hr_employer_contribution_form" id="menu_department_tree" parent="hr_payroll.menu_hr_root_payroll" groups="base.group_hr_user"/>
  
  </data>
</openerp>
