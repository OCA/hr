<odoo>

    <record model="ir.rule" id="hr_employee_passport_user_rule">
        <field name="name">hr.employee.passport user rule (in hr_employee_passport)</field>
        <field name="model_id" ref="model_hr_employee_passport"/>
        <field name="groups" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="domain_force">[('employee_id', 'in', user.employee_ids.ids)]</field>
    </record>

    <record model="ir.rule" id="hr_employee_passport_hr_manager_rule">
        <field name="name">hr.employee.passport hr manager rule (in hr_employee_passport)</field>
        <field name="model_id" ref="model_hr_employee_passport"/>
        <field name="groups" eval="[(6, 0, [ref('hr.group_hr_manager')])]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
