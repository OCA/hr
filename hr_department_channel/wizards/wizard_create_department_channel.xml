<odoo>

    <record model="ir.ui.view" id="wizard_create_department_channel_form_view">
        <field name="name">wizard.create.department.channel.form (in hr_department_channel)</field>
        <field name="model">wizard.create.department.channel</field>
        <field name="arch" type="xml">
            <form string="Wizard Create Department Channel">
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="generate_channel"
                            string="Generate Channel"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_create_department_channel_act_window">
        <field name="name">Name the new channel</field>
        <field name="res_model">wizard.create.department.channel</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
