<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="employee_form_inherit_partner" model="ir.ui.view">
        <field name="name">hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="partner_id" />
            </xpath>
        </field>
    </record>
    <record
        id="model_hr_employee_action_create_associated_partner"
        model="ir.actions.server"
    >
        <field name="name">Create associated partner</field>
        <field name="model_id" ref="hr.model_hr_employee" />
        <field name="binding_model_id" ref="hr.model_hr_employee" />
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_create_associated_employee()</field>
    </record>
</odoo>
