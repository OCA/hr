<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="1">

    <record id="hr_recruitment_general_rule" model="ir.rule">
        <field name="name">HR Applicant: addresses are private</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="domain_force">[('is_applicant', '=', False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
    </record>

    <record id="hr_recruitment_officer_rule" model="ir.rule">
        <field name="name">HR Applicant: Officer can access addresses</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="domain_force">[('is_applicant', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_hr_user'))]"/>
    </record>

</data>
</openerp>
