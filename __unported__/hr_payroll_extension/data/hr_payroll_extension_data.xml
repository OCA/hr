        <!-- Rule Inputs -->

        <record id="hr_rule_input_bonus" model="hr.rule.input">
            <field name="code">BNS</field>
            <field name="name">Employee Bonus</field>
            <field name="input_id" ref="hr_salary_rule_bonus"/>
