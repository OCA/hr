<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="hr_employee_view_form_spouse" model="ir.ui.view">
            <field name="name">hr.employee.view.form.spouse</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr='//page[@string="Personal Information"]' position="after">
                    <page string="Family" groups="base.group_hr_user">
                        <group>
                            <group string="Spouse">
                                <field name="partner_spouse_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
